{% extends 'base.html.twig' %}
{% block title %}Select category{% endblock %}
{% block body %}
    <div class="d-flex mt-3 justify-content-between">
        {% for category in categories %}
            <div class="card green-hover question-category mb-2" question-category="{{ category }}" style="max-width: 10rem;">
                <div class="card-body text-secondary">
                    <h5 class="card-title text-center">{{ category }}</h5>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ form(select_question_category_form) }}
    <div class="card question">
        <div class="card-body">
            <p class="card-text">{{ question.getQuestion()|quill }}</p>
        </div>
    </div>

    {% set letters = ['A', 'B', 'C', 'D'] %}
    {% for key, answer in answers %}
        <div class="card mt-1 {{ answer.isCorrect() ? 'selected-answer' }} answer">
            <div class="card-body d-flex p-0">
                <div class="d-flex align-items-center justify-content-center"
                     style="width: 5%; border-right: 1px solid rgba(0, 0, 0, 0.1) !important;"
                >
                    <h5 class="m-0">{{ letters[key] }}</h5>
                </div>
                <div class="p-3" style="width: 95%;">
                    <p class="card-text">{{ answer.getAnswer()|quill }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}