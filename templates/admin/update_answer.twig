{% extends 'base.html.twig' %}
{% block title %}Update answer{% endblock %}
{% block body %}
    <div class="card question">
        <div class="card-body">
            <p class="card-text">{{ question.getQuestion()|quill }}</p>
        </div>
    </div>
    <div class="d-flex justify-content-end edit-buttons">
        <a class="btn btn-outline-warning btn-sm" href="{{ path('update_question', {'questionId': question.getId()}) }}">edit</a>
        <a class="btn btn-outline-danger btn-sm" href="{{ path('delete_question', {'questionId': question.getId()}) }}">delete</a>
    </div>

    {% set letters = ['A', 'B', 'C', 'D'] %}
    {% for key, answer in answers %}
        {% if answer.getId() == answerId %}
            {{ form(edit_answer_form) }}
        {% else %}
            <div class="card mt-1 {{ answer.isCorrect() ? 'selected-answer' }} answer">
                <div class="card-body d-flex p-0">
                    <div class="d-flex align-items-center justify-content-center"
                         style="width: 5%; border-right: 1px solid rgba(0, 0, 0, 0.1) !important;"
                    >
                        <h5 class="m-0">{{ letters[key] }}</h5>
                    </div>
                    <div class="p-3" style="width: 95%;">
                        <p class="card-text">{{ answer.getAnswer()|quill }}</p>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end edit-buttons">
                <a class="btn btn-outline-primary btn-sm" href="{{ path('set_answer_as_correct', {'questionId': question.getId(), 'answerId': answer.getId()}) }}">set as correct</a>
                <a class="btn btn-outline-warning btn-sm" href="{{ path('update_answer', {'questionId': question.getId(), 'answerId': answer.getId()}) }}">edit</a>
                <a class="btn btn-outline-danger btn-sm" href="{{ path('delete_answer', {'questionId': question.getId(), 'answerId': answer.getId()}) }}">delete</a>
            </div>
        {% endif %}
    {% endfor %}
    {% if answers|length < 4 %}
        <a class="btn btn-outline-secondary btn-sm" href="{{ path('create_answer', {'questionId': question.getId()}) }}">Add answer</a>
    {% endif %}
{% endblock %}