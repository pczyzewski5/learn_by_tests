{% extends 'base.html.twig' %}

{% block body %}
    <ul class="list-group">
        {% for question in questions %}
            <li class="list-group-item d-flex question list-group-item-action" question-id="{{ question.getId() }}">
                <div class="flex-grow-1 d-flex align-items-center">
                    {{ question.getQuestion()|slice(0, 85) }}
                </div>
                <div>
                    <button type="button" class="btn btn-primary">details</button>
                    <a class="btn btn-outline-danger" href="{{ path('question_delete', {'questionId': question.getId()}) }}">delete</a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}