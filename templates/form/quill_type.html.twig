{% block quill_type_label %}{% endblock %}
{% block quill_type_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            {# ... display the global form errors #}
                {% for error in errors %}
                    <div>{{ error.message }}</div>
                {% endfor %}
        {% else %}
            {% for error in errors %}
                <div>{{ error.message }}</div>
            {% endfor %}
            {# ... display the errors for a single field #}
        {% endif %}
    {% endif %}
{% endblock %}
{% block quill_type_widget %}
    <div id="quill-editor-container"></div>
    <input id="quill-data-container"
           type="text"
           name="{{ parent_name }}[{{ name }}]"
            {% if data[name] is defined %}
                value="{{ data[name] }}"
            {% endif %}
           class="form-control"
           hidden
           required
    >
{% endblock %}