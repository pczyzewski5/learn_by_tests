<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnByTests\Infrastructure\User\User" repository-class="LearnByTests\Infrastructure\User\UserRepository" table="users">
        <id name="id" type="string" column="id"/>
        <field name="email" type="string" column="email"/>
        <field name="roles" type="string" column="roles"/>
        <field name="password" type="string" column="password"/>
        <field name="createdAt" type="datetime" column="created_at"/>
    </entity>

</doctrine-mapping>