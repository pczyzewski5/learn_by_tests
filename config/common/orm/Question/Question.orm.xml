<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnByTests\Infrastructure\Question\Question" table="questions">
        <id name="id" type="string" column="id"/>
        <field name="question" type="string" column="question"/>
        <field name="authorId" type="string" column="author_id"/>
        <field name="category" type="string" column="category"/>
        <field name="createdAt" type="datetime" column="created_at"/>
    </entity>

</doctrine-mapping>